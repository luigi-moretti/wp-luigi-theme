{
	"$schema": "https://schemas.wp.org/wp/6.4/theme.json",
	"version": 2,
	"customTemplates": [
		{
			"name": "front-page",
			"title": "Página Inicial",
			"postTypes": ["page"]
		}
	],
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"palette": [
				{
					"color": "#131516",
					"name": "Texto Principal",
					"slug": "texto-principal"
				},
				{
					"color": "#293338",
					"name": "Destaque",
					"slug": "destaque"
				},
				{
					"color": "#6c757a",
					"name": "Texto Secundário",
					"slug": "texto-secundario"
				},
				{
					"color": "#eceeee",
					"name": "Cinza Claro",
					"slug": "cinza-claro"
				},
				{
					"color": "#fafafa",
					"name": "Fundo",
					"slug": "fundo"
				},
				{
					"color": "#ffffff",
					"name": "Branco",
					"slug": "branco"
				}
			],
			"custom": true,
			"customDuotone": false,
			"customGradient": true,
			"defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"duotone": []
		},
		"typography": {
			"customFontSize": true,
			"fontFamilies": [
				{
					"fontFamily": "\"Space Grotesk\", \"Noto Sans\", sans-serif",
					"name": "Space Grotesk",
					"slug": "space-grotesk",
					"fontFace": [
						{
							"fontFamily": "Space Grotesk",
							"fontWeight": "400 700",
							"fontStyle": "normal",
							"src": ["https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&display=swap"]
						}
					]
				},
				{
					"fontFamily": "\"Noto Sans\", sans-serif",
					"name": "Noto Sans",
					"slug": "noto-sans",
					"fontFace": [
						{
							"fontFamily": "Noto Sans",
							"fontWeight": "400 900",
							"fontStyle": "normal",
							"src": ["https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;700;900&display=swap"]
						}
					]
				}
			],
			"fontSizes": [
				{
					"size": "0.875rem",
					"slug": "small",
					"name": "Pequeno"
				},
				{
					"size": "1rem",
					"slug": "medium",
					"name": "Médio"
				},
				{
					"size": "1.125rem",
					"slug": "large",
					"name": "Grande"
				},
				{
					"size": "1.375rem",
					"slug": "x-large",
					"name": "Extra Grande"
				},
				{
					"size": "2rem",
					"slug": "xx-large",
					"name": "Muito Grande"
				}
			],
			"lineHeight": true,
			"dropCap": false
		},
		"spacing": {
			"spacingSizes": [
				{
					"size": "0.5rem",
					"slug": "20",
					"name": "XS"
				},
				{
					"size": "1rem",
					"slug": "30",
					"name": "S"
				},
				{
					"size": "1.5rem",
					"slug": "40",
					"name": "M"
				},
				{
					"size": "2rem",
					"slug": "50",
					"name": "L"
				},
				{
					"size": "3rem",
					"slug": "60",
					"name": "XL"
				},
				{
					"size": "4rem",
					"slug": "70",
					"name": "XXL"
				},
				{
					"size": "6rem",
					"slug": "80",
					"name": "XXXL"
				}
			],
			"units": ["px", "em", "rem", "vh", "vw", "%"]
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"dimensions": {
			"minHeight": true
		},
		"position": {
			"sticky": true
		},
		"layout": {
			"contentSize": "960px",
			"wideSize": "1200px"
		},
		"blocks": {
			"core/button": {
				"border": {
					"radius": true,
					"color": true,
					"style": true,
					"width": true
				},
				"color": {
					"background": true,
					"text": true
				},
				"typography": {
					"fontWeight": true
				},
				"spacing": {
					"padding": true
				}
			},
			"core/heading": {
				"typography": {
					"fontWeight": true,
					"lineHeight": true,
					"letterSpacing": true
				}
			},
			"core/paragraph": {
				"typography": {
					"lineHeight": true
				}
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--fundo)",
			"text": "var(--wp--preset--color--texto-principal)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--space-grotesk)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.5"
		},
		"spacing": {
			"blockGap": "1.5rem"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontSize": "2rem",
					"fontWeight": "700",
					"lineHeight": "1.2",
					"letterSpacing": "-0.015em"
				},
				"color": {
					"text": "var(--wp--preset--color--texto-principal)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "1.375rem",
					"fontWeight": "700",
					"lineHeight": "1.3",
					"letterSpacing": "-0.015em"
				},
				"color": {
					"text": "var(--wp--preset--color--texto-principal)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "1.125rem",
					"fontWeight": "700",
					"lineHeight": "1.4"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--texto-principal)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--destaque)"
					}
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--destaque)",
					"text": "var(--wp--preset--color--branco)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "700",
					"letterSpacing": "0.015em"
				},
				"border": {
					"radius": "0.5rem"
				},
				"spacing": {
					"padding": {
						"top": "0.625rem",
						"right": "1rem",
						"bottom": "0.625rem",
						"left": "1rem"
					}
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--texto-principal)"
					}
				}
			}
		},
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontSize": "1.125rem",
					"fontWeight": "700",
					"letterSpacing": "-0.015em"
				},
				"color": {
					"text": "var(--wp--preset--color--texto-principal)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--texto-principal)"
						},
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--texto-principal)"
							}
						}
					}
				}
			},
			"core/navigation": {
				"elements": {
					"link": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--small)",
							"fontWeight": "500",
							"textDecoration": "none"
						},
						"color": {
							"text": "var(--wp--preset--color--texto-principal)"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--destaque)"
							}
						}
					}
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "700",
					"lineHeight": "1.2",
					"letterSpacing": "-0.015em"
				}
			},
			"core/post-content": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "1.6"
				}
			},
			"core/group": {
				"spacing": {
					"padding": {
						"top": "0",
						"right": "0",
						"bottom": "0",
						"left": "0"
					}
				}
			}
		}
	}
}